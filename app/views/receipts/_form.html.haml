= form_for @receipt do |f|
  - if @receipt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@receipt.errors.count, "error")} prohibited this receipt from being saved:"
      %ul
        - @receipt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :context
    = f.text_field :context
  .field
    = f.label :processed_text
    = f.text_area :processed_text
  .field
    = f.label :tip
    = f.text_field :tip
  .field
    = f.label :tax
    = f.text_field :tax
  .field
    = f.label :sub_total
    = f.text_field :sub_total
  .field
    = f.label :total
    = f.text_field :total
  .actions
    = f.submit 'Save'
